<div class="manga-card">
	<a class="to-manga" href="
	{{#if toChapter}}
	{{genLink2 manga.constant.slug manga.progress.season manga.progress.chapter manga.progress.current}}
	{{else}}
	{{genLink2 manga.constant.slug}}
	{{/if}}
	">
		<img alt="Poster" src="{{manga.constant.posterUrl}}" class="poster">
	</a>
	<div class="manga-meta">
		<p class="progress">{{getProgressString manga}}</p>
		<div class="title-div">
			<span class="flex">
				{{#if progress.new}}
				<span class="badge badge-background">
				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-right-circle"><circle cx="12" cy="12" r="10"></circle><polyline points="12 16 16 12 12 8"></polyline><line x1="8" y1="12" x2="16" y2="12"></line></svg>
				</span>
				{{else}}
				<span></span>
				{{/if}}
				<a class="to-manga" href="
				{{#if toChapter}}
				{{genLink2 manga.constant.slug manga.progress.season manga.progress.chapter manga.progress.current}}
				{{else}}
				{{genLink2 manga.constant.slug}}
				{{/if}}
				">
					<h2 class="title-small">
						{{manga.constant.title}}
					</h2>
				</a>
			</span>
			{{#if toChapter}}
			<a href="/{{manga.constant.slug}}" class="to-manga-page">
				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-info"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="16" x2="12" y2="12"></line><line x1="12" y1="8" x2="12.01" y2="8"></line></svg>
			</a>
			{{/if}}
		</div>
	</div>
</div>