<div class="content-inner">
	<h1 class="title">Adolla</h1>
	<p>Adolla is a manga-reader web app built by <a href="https://jipfr.nl" target="_blank" class="anchor">Jip Fr</a>. The source code is available <a href="https://github.com/jipfr/Adolla" target="_blank" class="anchor">here</a>.</p>

	{{#if reading}}
	<section class="section continue-reading" data-list-id="continue-reading">
		<h2 class="sub-title spread do-spread"><span>Continue reading</span> {{> list-type }}</h2>
		<div class="manga-grid show-all-wrapper do-show-all">
			
			{{#each reading}}
			{{> manga-card manga=this toChapter=true}}
			{{/each}}

			<button class="show-all">Show <span class="more-count"></span> more</button>

		</div>
	</section>
	{{/if}}
	{{#each lists}}
	{{> list list=this}}
	{{/each}}
	<section class="section popular" data-list-id="popular">
		<h2 class="sub-title spread do-spread"><span>Popular right now</span> {{> list-type }}</h2>
		<div class="manga-grid">
		{{#each popular}}
			{{>manga-card manga=this}}
		{{/each}}
		</div>
	</section>

</div>

<script src="/js/pages/home.js"></script>
<script src="/js/reusable/lists.js"></script>
<script src="/js/reusable/list-type.js"></script>